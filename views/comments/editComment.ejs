<%- include('../partials/header'); -%>

<div class="container" style="margin:10% auto; width:40%; border-radius:3px; background-color:#f2ebeb;">

<h1 style="text-align:center">Edit Comment by <%= comment.author.username %></h1>

<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>/?_method=PUT" method="POST">

<div class="form-group">
<label for="url"><strong>Comment</strong></label>
<input type="text" id="url" class="form-control" name="comment[text]" placeholder="Add Comment" value="<%= comment.text %>">
</div>

<div class="form-group">
<button class="btn btn-warning btn-md" style="margin:10px 40%;">Submit</button>
</div>
</form>
<a href="/campgrounds/<%=campground_id%>">Back</a>
</div>


<%- include('../partials/footer'); -%>