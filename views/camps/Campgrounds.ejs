<%- include('../partials/header'); -%>

<div class="container">
<div class="jumbotron" style="text-align:center;  background: none;">
  <div class="container">
<h1>Welcome to Campgrounds</h1>
<p>See all cool destinations</p>
<a class="btn btn-primary btn-lg" href="/campgrounds/new" role="button" style="margin-top: 0.2%"> 
 Add new Campgrounds</a>
 </div>
  </div>  

  <div class="row" style="display:flex; flex-wrap:wrap;">  
<% camps.forEach(function(x){ %>
	<div class="col-md-3 col-sm-6" style="margin-bottom: 10px; background-blend-mode: screen; ">
		
		<div class="img-thumbnail">
		<img class="img-fluid" src="<%= x.url %>">
			<div class="caption text-center">
				<h4><%= x.name %></h4>
				<p>
			<a href="/campgrounds/<%= x._id %>"class="btn btn-info"> More Info</a>		
		</p>
			</div>
			
		</div>
	</div>
<% }); %>
  </div>
</div>

